= render "items/top"
%nav.root
  %ul.root--category
    %li.root--category--name
      = link_to root_path,{class:"root--category--name--link"} do
        FURIMA
    %li.root--category--logo >
    %li.root--category--name
      = link_to categories_path,{class:"root--category--name--link"} do
        カテゴリー一覧
    %li.root--category--logo >
    %li.root--category--name
      = link_to category_path(@category.parent.parent.id),{class:"root--category--name--link"} do
        = @category.parent.parent.category_name
    %li.root--category--logo >
    %li.root--category--name
      = link_to category_path(@category.parent.id),{class:"root--category--name--link"} do
        = @category.parent.category_name
    %li.root--category--logo >
    %li.root--category--name
      = link_to category_path(@category.id),{class:"root--category--name--link"} do
        = @category.category_name
    %li.root--category--logo >
    %li.root--category--name
      = @product.name
.main-show
  .mainbox
    .mainbox__top
      .mainbox__top__title
        カンガルー
      .mainbox__top__image
        = link_to image_tag "icon-01.png", alt: "kangaroo", class: "kangaroo"
        .mainbox__top__image__sub
          = link_to ("#"),{ class: "pics"} do
            = image_tag "icon-01.png", alt: "kangaroo", class: "kangarooo"
          = link_to ("#"),{ class: "pics"} do
            = image_tag "icon-01.png", alt: "kangaroo1", class: "kangarooo"
          = link_to ("#"),{ class: "pics"} do
            = image_tag "icon-01.png", alt: "kangaroo2", class: "kangarooo"
      .mainbox__top__price
        ¥1,000,000
        .mainbox__top__price__tax
          (税込)送料込み
      .product-description
        %label{for: "description"} 商品説明
        %textarea{cols: "40", name: "description", rows: "4", placeholder: "商品の説明を記入して下さい"}
      .product-information
        %table
          %tr
            %th 出品者
            %td マスター
          %tr
            %th カテゴリー
            %td
              %ul
                %li
                  = link_to category_path(@category.parent.parent.id) do
                    = @category.parent.parent.category_name
                %li
                  = link_to category_path(@category.parent.id)do
                    = @category.parent.category_name
                %li
                  = link_to category_path(@category.id) do
                    = @category.category_name
          %tr
            %th ブランド
            %td 
          %tr
            %th 商品のサイズ
            %td 
          %tr
            %th 商品の状態
            %td 新品/未使用
          %tr
            %th 配送料の負担
            %td 送料込み(出品者負担)
          %tr
            %th 配送元の地域
            %td 
              = link_to "海外"
          %tr
            %th 発送日の目安
            %td 1-2日で発送
      .extrainfo
        %ul
          %li.favorite
            = icon('fas', 'heart', class: "likes")
            = link_to "お気に入り"
            %span
            3150
        %ul
          %li.reports
            = icon('fas', 'exclamation-triangle', class: "report")
            = link_to "不適切な商品の通報"
    .mainbox__middle
      .commentbox
        %label{for: "comment"} コメント
        %textarea{cols: "40", name: "comment", rows: "4", placeholder: "コメントを記入する"}
      .commentbox-alert
        .commentbox-alert__content
          相手のことを考え丁寧なコメントを心がけましょう。
          %br
          不快な言葉遣いなどは利用制限や退会処分となることがあります。
      .commentform
        %ul
          %li.submitbutton
            = icon('fas', 'comment', class: "submit")
            %button{type: "submit", class: "submit"}コメントする
    .links
      %ul
        %li
          = link_to "< 前の商品"
      %ul
        %li
          = link_to "後ろの商品 >"
    .products
      .products--view
        = @category.parent.parent.category_name
        をもっと見る
      .category--prodboxs--lis
        - @products.each do |item|
          - if Category.find(item.category_id).parent.parent == @category.parent.parent
            = link_to product_path(item.id),{class:"category--prodboxs--lis--product"} do
              .category--prodboxs--lis--product--image
                = image_tag "icon-01.png", alt: "#N/A", id: "assets", class: "image--pro"
              .category--prodboxs--lis--product--body
                .category--prodboxs--lis--product--body--name
                  = item.name
                .category--prodboxs--lis--product--body--detail
                  %ul.detaillist
                    %li
                      = item.price
                      円
                    %li
                      = icon('fas', 'fa-star', class: "staricon")
                      1
                  %p (税込)
                  -# -# 一時的な表示です
                  -# = Category.find(item.category_id).category_name
        = link_to ('#'),{class:"category--prodboxs--lis--product"} do
          .category--prodboxs--lis--product--image
            = image_tag "icon-01.png", alt: "#N/A", id: "assets", class: "image--pro"
          .category--prodboxs--lis--product--body
            .category--prodboxs--lis--product--body--name テスト(どこでも表示されるよ)
            .category--prodboxs--lis--product--body--detail
              %ul.detaillist
                %li 1000円
                %li
                  = icon('fas', 'fa-star', class: "staricon")
                  1
              %p (税込)
