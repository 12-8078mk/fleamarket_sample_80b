= paginate @items ,remote: true
.category--prodboxs--lisall
  - @items.each do |item|
    = link_to product_path(item.id),{class:"category--prodboxs--lis--product"} do
      .category--prodboxs--lis--product--image
        = image_tag Image.where(product_id: item.id).first.src.url, alt: "#N/A", id: "assets", class: "image--pro"
        - if item.buyer_id.present?
          .items-box_photo__mini
            .items-box_photo__mini__inner SOLD    
      .category--prodboxs--lis--product--body
        .category--prodboxs--lis--product--body--name
          = item.name
        .category--prodboxs--lis--product--body--detail
          %ul.detaillist
            %li
              = item.price.to_s.reverse.scan(/.{1,3}/).join(',').reverse
              円
            %li
              = icon('fas', 'fa-star', class: "staricon")
              1
          %p (税込)
= paginate @items ,remote: true