%body
  = render "items/top"
  = render "users/breadcrumbtrail"

  .credit
    = render "users/side-bar"
    .credit__main
      .container-credit
        %label.credit__main__title 登録クレジットカード情報
        .credit__main__border
        %br
        .credit__main__text
          .credit__main__text__number
            = "**** **** **** " + @default_card_information.last4
        %br
          .credit__main__text__date
            - exp_month = @default_card_information.exp_month.to_s
            - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
            = exp_month + "月" + " / " + exp_year + "年"
          .credit__main__text__mypage
            = link_to "マイページに戻る", "/users/#{current_user.id}"

      .credit__main__delete
      = form_tag(delete_credit_card_index_path, method: :post, id: 'charge-form',  name: "inputForm", class: "credit__delete") do
        %input{ type: "hidden", name: "card_id", value: "" }
        %button.credit__main__delete__submit クレジットカード情報を削除する

  = render "items/thirdinfo"
  = render "items/footer"