= render "items/top"
%nav.root
  %ul.root--category
    %li.root--category--name
      = link_to root_path,{class:"root--category--name--link"} do
        FURIMA
    %li.root--category--logo >
    %li.root--category--name
      = link_to category_index_path,{class:"root--category--name--link"} do
        カテゴリー一覧
    %li.root--category--logo >
    %li.root--category--name
      - if @category.has_children?
        = link_to category_path(@category.parent.id),{class:"root--category--name--link"} do
          = @category.parent.category_name
        %li.root--category--logo >
        %li.root--category--name
          = link_to subcategory_path(@category.id),{class:"root--category--name--link"} do
            = @category.category_name
      - else
        = link_to category_path(@category.parent.parent.id),{class:"root--category--name--link"} do
          = @category.parent.parent.category_name
        %li.root--category--logo >
        %li.root--category--name
          = link_to subcategory_path(@category.parent.id),{class:"root--category--name--link"} do
            = @category.parent.category_name
        %li.root--category--logo >
        %li.root--category--name
          = link_to subcategory_path(@category.id),{class:"root--category--name--link"} do
            = @category.category_name
.main
  .showmain
    .showmain--right
      .titletoparea
        .titlebox
          .titlebox--title
            = link_to category_path(@category.id),{class:"root--category--name--linksec"} do
              = @category.category_name
          - @category.children.each do |child|
            .titlebox--subsubtitle
              .titlebox--subsubtitle--items
                = link_to subcategory_path(child) ,{class:"titlebox--subsubtitle--items--link"} do
                  = child.category_name
  .products
    .products--view
      = @category.category_name
      の商品一覧
    .category--prodboxs--lis
      = link_to ('#'),{class:"category--prodboxs--lis--product"} do
        .category--prodboxs--lis--product--image
          = image_tag "icon-01.png", alt: "#N/A", id: "assets", class: "image--pro"
        .category--prodboxs--lis--product--body
          .category--prodboxs--lis--product--body--name テスト1
          .category--prodboxs--lis--product--body--detail
            %ul.detaillist
              %li 1000円
              %li
                = icon('fas', 'fa-star', class: "staricon")
                1
            %p (税込)
      = link_to ('#'),{class:"category--prodboxs--lis--product"} do
        .category--prodboxs--lis--product--image
          = image_tag "icon-01.png", alt: "#N/A", id: "assets", class: "image--pro"
        .category--prodboxs--lis--product--body
